<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sKoleje"
        android:textSize="10sp"
        android:checked="true"
        android:background="@color/tr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/SwitchCompatThemePurple"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:text="Koleje"
     />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sMenzy"
        android:background="@color/tr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sKoleje"
        android:layout_alignParentEnd="true"
        android:theme="@style/SwitchCompatThemeRed"
        android:checked="true"
        android:text="Menzy"
        android:textSize="10sp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sBudovy"
        android:background="@color/tr"
        android:textSize="10sp"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/SwitchCompatThemeBlue"
        android:layout_below="@+id/sMenzy"
        android:layout_alignParentEnd="true"
        android:text="Budovy" />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sMista"
        android:textSize="10sp"
        android:background="@color/tr"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/SwitchCompatThemeGreen"
        android:layout_below="@+id/sBudovy"
        android:layout_alignParentEnd="true"
        android:text="MÃ­sta" />
</RelativeLayout>